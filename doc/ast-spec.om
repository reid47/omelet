###########################################################################
##                                                                       ##
##          O M E L E T     A S T     S P E C I F I C A T I O N          ##
##                                                                       ##
###########################################################################

+ast-node node =
    @div.ast-node[id={node.kind}]
        @ul
            >for key in node|keys
                @li {key} - {node[key]}

##-------------------------------------------------------------------------
## Attribute
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Attribute"
        + name = {String}
        + value = {String} | {Interpolation}
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Block
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Block"
        + contents =
            - {Definition}
            - {Comment}
            - {Include}
            - {For}
            - {If}
            - {Tag}
            - {Interpolation}
            - {String}
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Boolean
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Boolean"
        + value = a boolean literal
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Comment
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Comment"
        + value = a string literal
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Definition
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Definition"
        + name = {Identifier}
        + style = "default" | "tag" | "trait"
        + parameters =
            - {Identifier}
        + body = {Block} | {Tag} | {Dictionary} | {List} | {Number} | {String} | {Boolean}
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Dictionary
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Dictionary"
        + entries =
            - {Definition} | {Comment}
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Doctype
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Doctype"
        + name = {String}
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Document
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Document"
        + extend = {Extend} | null
        + imports =
            - {Import}
        + contents =
            - {Doctype}
            - {Comment}
            - {Definition}
            - {Include}
            - {For}
            - {If}
            - {Block}
            - {Tag}
            - {Interpolation}
            - {String}
            - {Boolean}
            - {Number}
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Extend
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Extend"
        + file = {Path}
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Filter
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Filter"
        + name = {Identifier}
        + arguments =
            - {Number}
            - {Boolean}
            - {String}
            - {Identifier}
            - {FilterSequence}
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## FilterSequence
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "FilterSequence"
        + sequence =
            - {Filter}
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## For
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "For"
        + iterator = {Identifier}
        + data = {Identifier} | {Path} | {List}
        + filters = {FilterSequence} | null
        + body = {Block}
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Identifier
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Identifier"
        + value = a string literal
        + modifiers =
            - {Modifier}
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## If
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "If"
        + predicate = {Identifier}
        + negated = a boolean literal
        + filters = {FilterSequence} | null
        + thenCase = {Block} | null
        + elifCases =
            - {If}
        + elseCase = {Block} | null
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Import
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Import"
        + style = "file" | "directory" | "tags"
        + path = {String}
        + alias = {Identifier} | null
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Include
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Include"
        + included = {Identifier} | {Path}
        + context = {Dictionary} | null
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Interpolation
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Interpolation"
        + name = {Identifier}
        + leaveUnescaped = a boolean literal
        + positionalArgs = a boolean literal
        + context = {Dictionary} | null
        + arguments =
            - {Identifier} | {String} | {Number} | {Boolean}
        + filters = {FilterSequence} | null
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## List
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "List"
        + elements =
            - {ListElement} | {Comment}
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## ListElement
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "ListElement"
        + body = {Block} | {Dictionary} | {List} | {Number} | {String} | {Boolean}
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Mode
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Mode"
        + name = a string literal
        + value = a string literal
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Modifier
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Modifier"
        + value = {String} | {Number} | {Identifier}
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Number
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Number"
        + value = a number literal literal
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Path
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Path"
        + value = a string literal
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## String
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "String"
        + quoted = a boolean literal
        + noEscape = a boolean literal | undefined
        + value = a string literal
        + line = a number literal
        + lineEnd = a number literal

##-------------------------------------------------------------------------
## Tag
##-------------------------------------------------------------------------

>ast-node with
    + node =
        + kind = "Tag"
        + name = a string literal
        + attributes =
            - {Attribute}
        + tagStyle = "header-only" | "block" | "inline" | "interpolated"
        + inner = {Block}
        + line = a number literal
        + lineEnd = a number literal

